<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MediaTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="MediaSubtitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#989898</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Widget.Theme.OlarisAndroid.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="OnlineProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:backgroundTint">@color/olaris_pink</item>
        <item name="android:foregroundTint">@color/olaris_pink</item>
        <item name="android:progressTint">@color/olaris_pink</item>
    </style>

    <style name="OfflineProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:backgroundTint">@color/error</item>
        <item name="android:foregroundTint">@color/error</item>
        <item name="android:progressTint">@color/error</item>
    </style>

    <style name="PlaystateProgress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:backgroundTint">@color/olaris_pink</item>
        <item name="android:foregroundTint">@color/olaris_purple</item>
        <item name="android:progressTint">@color/olaris_pink</item>
    </style>

    <style name="Widget.Theme.OlarisAndroid.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
</resources>